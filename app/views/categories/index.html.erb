<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to category_path(category.id) do %>
            <i class="glyphicon glyphicon-eye-open
"></i> 
          <% end %>

        </td>
        <td>
          <%= link_to edit_category_path(category.id) do %>
            <i class="glyphicon glyphicon-pencil
"></i> 
          <% end %>
        </td>
        <td>
        <% if can? :destroy, category %> 
          <%= link_to category_path(category.id), method: :delete, data: {confirm: "Are you sure"} do %>
            <i class="glyphicon glyphicon-trash"></i> 
          <% end %>
        <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Category.new %>
  <%= link_to new_category_path, class: "btn btn-primary" do %>
    <i class="glyphicon glyphicon-plus"></i> Add Category
  <% end %>
<% end %> 


